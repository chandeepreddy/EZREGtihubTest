                    </apex:commandButton>
                    </apex:actionRegion>   --> 
                    
                   <!-- <apex:commandButton value="Copy Previous Status Report" action="{!fetchStatusReportByDate}"  styleclass="btn_submit"/>  -->
                    <apex:commandButton value="Cancel" action="{!cancelStatusReport}" styleclass="cancel" immediate="true"/>
                </div>
                 
        </div>
       

    </div>
</div>

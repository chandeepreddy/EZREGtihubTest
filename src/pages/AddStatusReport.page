        <apex:actionFunction id="CustomSRDate" name="CustomSRDate" action="{!fetchCustomDateSR}"  status="statusSaveTrip" rerender="inputDate,outptPanl,CpyoutptPnl,sveSubPnl,SRStatus" onComplete="RefreshCKTEditor()" >
